<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDeepOrange"
    tools:context="com.svs.myprojects.bollywoodquiz.login.RegisterFragment">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/username_holder"
        android:layout_width="@dimen/login_text_view_width"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/login_text_top_margin"
        android:textAlignment="center"
        android:theme="@style/AppTheme.WhiteAccent">

        <AutoCompleteTextView
            android:id="@+id/username"
            android:layout_width="@dimen/login_text_view_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@android:color/transparent"
            android:drawableLeft="@drawable/ic_account_circle_white_18dp"
            android:gravity="center"
            android:hint="@string/name"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:textSize="@dimen/login_screen_text_size" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/user_id_holder"
        android:layout_width="@dimen/login_text_view_width"
        android:layout_height="wrap_content"
        android:layout_below="@id/username_holder"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/login_text_top_margin"
        android:textAlignment="center"
        android:theme="@style/AppTheme.WhiteAccent">

        <AutoCompleteTextView
            android:id="@+id/user_id"
            android:layout_width="@dimen/login_text_view_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@android:color/transparent"
            android:drawableLeft="@drawable/ic_account_circle_white_18dp"
            android:gravity="center"
            android:hint="@string/user_id"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:textSize="@dimen/login_screen_text_size" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/password_holder"
        android:layout_width="@dimen/login_text_view_width"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_id_holder"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/login_text_top_margin"
        android:textAlignment="center"
        android:theme="@style/AppTheme.WhiteAccent">

        <AutoCompleteTextView
            android:id="@+id/password"
            style="@style/AppTheme.WhiteAccent"
            android:layout_width="@dimen/login_text_view_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@android:color/transparent"
            android:drawableLeft="@drawable/ic_visibility_white_18dp"
            android:gravity="center"
            android:hint="@string/password"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:textSize="@dimen/login_screen_text_size" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/confirm_password_holder"
        android:layout_width="@dimen/login_text_view_width"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_holder"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/login_text_top_margin"
        android:textAlignment="center"
        android:theme="@style/AppTheme.WhiteAccent">

        <AutoCompleteTextView
            android:id="@+id/confirm_password"
            android:layout_width="@dimen/login_text_view_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@android:color/transparent"
            android:drawableLeft="@drawable/ic_visibility_white_18dp"
            android:gravity="center"
            android:hint="@string/confirm_password"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:textSize="@dimen/login_screen_text_size" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/confirm_password_holder"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/register"
        android:textColor="@color/colorDeepOrange" />

</RelativeLayout>
