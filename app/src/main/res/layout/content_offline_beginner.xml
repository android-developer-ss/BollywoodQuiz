<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.svs.myprojects.bollywoodquiz.OfflineBeginner"
    tools:showIn="@layout/activity_offline_beginner">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/drama_collage" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.9"
            android:background="@color/colorDeepOrange"
            android:orientation="horizontal"
            android:padding="@dimen/fab_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextTimerScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TIMER: " />

                <TextView
                    android:id="@+id/timer_text"
                    style="@style/TextTimerScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 secs" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextTimerScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SCORE  " />

                <TextView
                    android:id="@+id/score_text"
                    style="@style/TextTimerScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0" />
            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/question_text"
                style="@style/TextQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="50dp"
                android:padding="@dimen/fab_margin"
                android:text="Questions" />
        </ScrollView>

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/true_false_radio_group"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:layout_marginTop="30dp"
            android:alpha="0.9"
            android:background="@color/colorDeepOrange"
            android:orientation="horizontal"
            android:padding="@dimen/fab_margin">

            <RadioButton
                android:id="@+id/true_click"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/fab_margin"
                android:text="TRUE"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/false_click"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/fab_margin"
                android:text="FALSE"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </RadioGroup>

        <Button
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_background"
            android:onClick="next_button_function"
            android:text="NEXT" />

    </LinearLayout>

    <ImageView
        android:id="@+id/image_on_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/thumbs_up"
        android:visibility="gone" />

</FrameLayout>
