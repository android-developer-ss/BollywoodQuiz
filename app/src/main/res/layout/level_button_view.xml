<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/background_circular" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp">

            <LinearLayout
                android:id="@+id/level_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_rectangular_button"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/level_button_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:gravity="center"
                    android:text="level"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/level_button_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:gravity="center"
                    android:text="level"
                    android:textColor="@color/colorOrange200"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/level_button_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/level_button"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"
                android:text="ssdfasdfasfas"
                android:textColor="@color/colorOrange100" />
        </RelativeLayout>
    </FrameLayout>

</merge>