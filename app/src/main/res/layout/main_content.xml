<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:level_button="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/im_theatre_red"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.svs.myprojects.bollywoodquiz.MainActivity"
    tools:showIn="@layout/main_activity">

    <Button
        android:id="@+id/play_board_button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/im_play_boardd"
        android:text="PLAY BOARD" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/play_board_button"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <com.svs.myprojects.bollywoodquiz.views.LevelButtonView
                android:id="@+id/level_1_offline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                level_button:button_content="(Offline)"
                level_button:button_description="This level has simple questions with true and false answers"
                level_button:button_text="LEVEL 1" />

            <com.svs.myprojects.bollywoodquiz.views.LevelButtonView
                android:id="@+id/level_2_offline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                level_button:button_content="(Offline)"
                level_button:button_description="This level has simple questions with true and false answers"
                level_button:button_text="LEVEL 2" />

            <com.svs.myprojects.bollywoodquiz.views.LevelButtonView
                android:id="@+id/level_3_offline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                level_button:button_content="(Offline)"
                level_button:button_description="This level has simple questions with true and false answers"
                level_button:button_text="LEVEL 3" />

            <com.svs.myprojects.bollywoodquiz.views.LevelButtonView
                android:id="@+id/level_4_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                level_button:button_content="(Offline Images)"
                level_button:button_description="This level has simple questions with true and false answers"
                level_button:button_text="LEVEL 4" />

            <com.svs.myprojects.bollywoodquiz.views.LevelButtonView
                android:id="@+id/level_5_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                level_button:button_content="(Offline Audio)"
                level_button:button_description="This level has simple questions with true and false answers"
                level_button:button_text="LEVEL 5" />

            <com.svs.myprojects.bollywoodquiz.views.LevelButtonView
                android:id="@+id/level_6_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                level_button:button_content="(Online Video )"
                level_button:button_description="This level has simple questions with true and false answers"
                level_button:button_text="LEVEL 6" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
