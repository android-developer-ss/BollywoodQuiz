<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorOrange</item>
        <item name="colorPrimaryDark">@color/colorDeepOrange</item>
        <item name="colorAccent">@android:color/holo_blue_dark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.WhiteAccent">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextTimerScore">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextQuestion">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/colorDeepOrange</item>
        <item name="android:alpha">0.9</item>
        <item name="android:textStyle">italic</item>
        <item name="android:padding">@dimen/fab_margin</item>
    </style>

    <style name="LoginTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/login_screen_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:layout_marginTop">30dp</item>
    </style>


</resources>
